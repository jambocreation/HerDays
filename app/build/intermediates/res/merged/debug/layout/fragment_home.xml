<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        tools:context="com.ovulationcalendar.herdays.fragment.HomeFragment">


        <android.support.v7.widget.CardView
            android:id="@+id/cvLastPeriod"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/toolbar"
            android:layout_margin="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alpha="0.8"
                android:background="@color/colorPrimary"
                android:elevation="3dp"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:id="@+id/tvDaysUntilNextPeriod"
                    style="@style/textWithOverlay2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="16 days until next period"
                    android:textAppearance="?android:textAppearanceLarge" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/dividerColor" />

                <TextView
                    android:id="@+id/tvNextPeriodDate"
                    style="@style/textWithOverlay2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingTop="8dp"
                    android:text="Feb 16 - Feb 20, 2016"
                    android:textSize="15sp"
                    android:textStyle="italic" />
            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/toolbar"
            android:layout_margin="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="0.8"
                android:background="@color/colorPrimary"
                android:elevation="3dp"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:id="@+id/tvDaysBeforeOvulation"
                    style="@style/textWithOverlay2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="16 days before ovulation"
                    android:textAppearance="?android:textAppearanceLarge" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/dividerColor" />

                <TextView
                    style="@style/textWithOverlay2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:text="Fertile days"
                    android:textSize="21sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvOvulationDate"
                    style="@style/textWithOverlay2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Feb 16 - Feb 20, 2016"
                    android:textSize="15sp"
                    android:textStyle="italic" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/toolbar"
            android:layout_margin="8dp"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="0.8"
                android:background="@color/colorPrimary"
                android:elevation="3dp"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    style="@style/textWithOverlay2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Safe Days"
                    android:textAppearance="?android:textAppearanceLarge" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/dividerColor" />

                <TextView
                    android:id="@+id/tvSafeRange"
                    style="@style/textWithOverlay2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingTop="16dp"
                    android:text="Feb 16 - Feb 20, 2016"
                    android:textSize="15sp"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/tvSafeRange2"
                    style="@style/textWithOverlay2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:gravity="center"
                    android:text="Feb 16 - Feb 20, 2016"
                    android:textSize="15sp"
                    android:textStyle="italic" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <Button
            android:id="@+id/btnPregCalc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/home_buttons_selector"

            android:text="When to use Pregnancy Test kit?"
            android:textColor="@color/textColorPrimary" />

        <Button
            android:id="@+id/btnDueDateCalc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/home_buttons_selector"
            android:text="Due Date Calculator"
            android:textColor="@color/textColorPrimary" />

        <Button
            android:id="@+id/btnNotesDiary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/home_buttons_selector"
            android:text="Notes &amp; Diary"
            android:textColor="@color/textColorPrimary" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp">

            <Button
                android:id="@+id/btnReset"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="RESET" />

            <ImageView
                android:id="@+id/id2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_gravity="right"
                android:adjustViewBounds="true"
                android:src="@drawable/site_thumbnail" />
        </RelativeLayout>


    </LinearLayout>
</ScrollView>
